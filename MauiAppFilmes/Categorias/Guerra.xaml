<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Guerra"
             Title="Guerra"
             Background="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"  ColumnDefinitions="*,*" Padding="5">
                <ImageButton Source="cavalodeguerra.jpg" x:Name="warhorse" Aspect="AspectFill"  Grid.Column="0" Grid.Row="0" Clicked="warhorse_Clicked"/>
                <ImageButton Source="dezenovedezessete.jpg" x:Name="dezenovedezessete" Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Clicked="dezenovedezessete_Clicked"/>
                <ImageButton Source="nadanovonofront.jpg" x:Name="nadadenovo" Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Clicked="nadadenovo_Clicked"/>
                <ImageButton Source="trezentos.jpg" x:Name="trezentos" Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Clicked="trezentos_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>