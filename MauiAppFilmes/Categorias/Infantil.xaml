<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Infantil"
             Title="Infantil"
             Background="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"  ColumnDefinitions="*,*" Padding="5">
                <ImageButton Source="meumalvadofavorito.jpg" x:Name="malvadofavorito" Aspect="AspectFill"  Grid.Column="0" Grid.Row="0" Clicked="malvadofavorito_Clicked"/>
                <ImageButton Source="minions.jpg" x:Name="minions" Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Clicked="minions_Clicked"/>
                <ImageButton Source="nemqueavacatussa.jpg" x:Name="vacatussa" Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Clicked="vacatussa_Clicked"/>
                <ImageButton Source="procurandonemo.jpg" x:Name="nemo" Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Clicked="nemo_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>