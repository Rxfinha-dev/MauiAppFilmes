<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Documentario"
             Title="Documentario"
             Background="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"  ColumnDefinitions="*,*" Padding="5">
                <ImageButton Source="milnovecentos.jpg" x:Name="mil" Aspect="AspectFill"  Grid.Column="0" Grid.Row="0" Clicked="mil_Clicked"/>
                <ImageButton Source="charlie.jpg" x:Name="charlie" Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Clicked="charlie_Clicked"/>
                <ImageButton Source="connor.jpg" x:Name="connor" Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Clicked="connor_Clicked"/>
                <ImageButton Source="elvis.jpg" x:Name="elvis" Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Clicked="elvis_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>