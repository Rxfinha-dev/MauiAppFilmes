<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Comedia"
             Title="Comedia"
             Background="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"  ColumnDefinitions="*,*" Padding="5">
                <ImageButton Source="casamentogrego.jpg" x:Name="casamento" Aspect="AspectFill"  Grid.Column="0" Grid.Row="0" Clicked="casamento_Clicked"/>
                <ImageButton Source="devoltaaofuturo.jpg" x:Name="devolta" Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Clicked="devolta_Clicked"/>
                <ImageButton Source="kungfupanda.jpg" x:Name="kungfu" Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Clicked="kungfu_Clicked"/>
                <ImageButton Source="madagascar.jpg" x:Name="madagascar" Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Clicked="madagascar_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>