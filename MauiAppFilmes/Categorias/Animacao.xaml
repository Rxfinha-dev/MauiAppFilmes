             x:Class="MauiAppFilmes.Categorias.Animacao"
             Title="Animacao"
             Background="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"  ColumnDefinitions="*,*" Padding="5">
                <ImageButton Source="carros.jpg" x:Name="carros"  Grid.Column="0" Grid.Row="0"/>
                <ImageButton Source="lightyear.jpg" x:Name="lightyear"  Grid.Column="0" Grid.Row="1"/>
                <ImageButton Source="agua.jpg" x:Name="agua" Grid.Column="1" Grid.Row="0"/>
                <ImageButton Source="toy_Story.jpg" x:Name="toy_story" Grid.Column="1" Grid.Row="1"/>
