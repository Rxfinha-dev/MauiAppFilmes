<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Animacao"
             Title="Animacao"
             Background="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"  ColumnDefinitions="*,*" Padding="5" >
                <ImageButton Source="carros.jpg" x:Name="carros" Aspect="AspectFill"  Grid.Column="0" Grid.Row="0" Clicked="carros_Clicked"/>
                <ImageButton Source="lightyear.jpg" x:Name="lightyear" Aspect="AspectFill"   Grid.Column="0" Grid.Row="1" Clicked="lightyear_Clicked"/>
                <ImageButton Source="agua.jpg" x:Name="agua" Grid.Column="1" Aspect="AspectFill"  Grid.Row="0" Clicked="agua_Clicked"/>
                <ImageButton Source="toy_Story.jpg" x:Name="toy_story" Aspect="AspectFill"  Grid.Column="1" Grid.Row="1" Clicked="toy_story_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>