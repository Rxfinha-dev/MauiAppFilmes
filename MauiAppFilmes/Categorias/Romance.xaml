<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Romance"
             Title="Romance"
             Background="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"  ColumnDefinitions="*,*" Padding="5">
                <ImageButton Source="aprova.jpg" x:Name="aprova" Aspect="AspectFill"  Grid.Column="0" Grid.Row="0" Clicked="aprova_Clicked"/>
                <ImageButton Source="conti.jpg" x:Name="continencia" Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Clicked="continencia_Clicked"/>
                <ImageButton Source="crepusculo.jpg" x:Name="crepusculo" Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Clicked="crepusculo_Clicked"/>
                <ImageButton Source="titanic.jpg" x:Name="titanic" Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Clicked="titanic_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>