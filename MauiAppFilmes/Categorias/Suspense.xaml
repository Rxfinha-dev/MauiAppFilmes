<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFilmes.Categorias.Suspense"
             Title="Suspense"
             Background="Black">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"  ColumnDefinitions="*,*" Padding="5">
                <ImageButton Source="clubedaluta.jpg" x:Name="fightClub" Aspect="AspectFill"  Grid.Column="0" Grid.Row="0" Clicked="fightClub_Clicked"/>
                <ImageButton Source="jhonwick.jpg" x:Name="jhonWick" Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Clicked="jhonWick_Clicked"/>
                <ImageButton Source="missao.jpg" x:Name="missao" Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Clicked="missao_Clicked"/>
                <ImageButton Source="truquedemestre.jpg" x:Name="truquedemestre" Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Clicked="truquedemestre_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>